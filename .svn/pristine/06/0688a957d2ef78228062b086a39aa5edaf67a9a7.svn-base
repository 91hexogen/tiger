
/* BOOTSTRAP BOX-SIZING */
.selector-for-some-widget {
  box-sizing: content-box;
}

html {
  height: 100%;
  box-sizing: border-box;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

body {
  position: relative;
  margin: 0;
  padding-bottom: 6rem;
  min-height: 100%;
  background-color: grey;
}

h3.headtitle {
	background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

h2.green {
  background: #ffce00;
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

.main{
  background: linear-gradient(to bottom, #37474F 0%, #333 100%);
}

/* ##### Apps ##### */

div.ex1 {
    height: 715px;
    overflow: auto;
}

table {
    border-spacing: 0;
    width: 100%;
}

th {
    cursor: pointer;
}

th, td {
    text-align: left;
    padding: 16px;
}

.flag{
  border-radius: 5px;
  width: 80px;
  height: 50px;
}

p.xf{
  font-size: 28px;
}


#parent #child{
        margin: auto;
        text-align: center;
        bottom: 10px;
        position: absolute;
}

#background {
   position: absolute;
   top: 0;
   left: 0;
   bottom: 0;
   right: 0;
   z-index: -1;
   overflow: hidden;
}

.appheader{
  background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}


/* SEARCHBAR */
input[type=text] {
    width: 130px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    background-color: white;
    background-image: url('searchicon.png');
    background-position: 10px 10px;
    background-repeat: no-repeat;
    padding: 12px 20px 12px 40px;
    -webkit-transition: width 0.4s ease-in-out;
    transition: width 0.4s ease-in-out;
}

input[type=text]:focus {
    width: 100%;
}

/* ######### TICKER SLIDE ######### */

.ticker-container {
  background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
	width: 100%;
  overflow: hidden;
  margin: 0 auto;
}
.ticker-text {
	height: 150%;
  color: #fafafa;
  white-space:nowrap;
  display:inline-block;
  font-family: 'Montserrat', sans-serif;
  text-transform: uppercase;
  font-size: 24px;
}

.ticker-title{
  background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
	width: 100%;
  overflow: hidden;
  margin: 0 auto;
}

p.tickerheader{
  background: linear-gradient(to right, #19b1b2 0%, #2d8283 20%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}


/* ######### NAVBAR ######### */

nav {
  background-color: #292b2c;
}


/* ######### MAIN DIVS ######### */

