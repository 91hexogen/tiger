
/* BOOTSTRAP BOX-SIZING */
.selector-for-some-widget {
  box-sizing: content-box;
}

html {
  height: 100%;
  box-sizing: border-box;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

body {
  position: relative;
  margin: 0;
  padding-bottom: 6rem;
  min-height: 100%;
  background-color: grey;
}

h3.headtitle {
	background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

h2.green {
  background: #ffce00;
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

.main{
  background: linear-gradient(to bottom, #37474F 0%, #333 100%);
}

/* ##### Apps ##### */

div.ex1 {
    height: 715px;
    overflow: auto;
}

table {
    border-spacing: 0;
    width: 100%;
}

th {
    cursor: pointer;
}

th, td {
    text-align: left;
    padding: 16px;
}

img:hover {
    transform: scale(1.1);
    -ms-transform: scale(1.1);
    -webkit-transform: scale(1.1);
    -moz-transform: scale(1.1);
    -o-transform: scale(1.1);
    filter: none;
      -webkit-filter: grayscale(0);
}

img {
    width: 100px;
    height: 100px;
    border-radius: 5px;
    margin: 10px;

    transition: transform 0.2s;
    -webkit-transition: -webkit-transform 0.2s;
    -moz-transition: -moz-transform 0.2s;
    -o-transition: -o-transform 0.2s;

    filter: gray; /* IE5+ */
    -webkit-filter: grayscale(1); /* Webkit Nightlies & Chrome Canary */
    -webkit-transition: all .3s ease-in-out;
}

p.xf{
  font-size: 28px;
}

#background {
   position: absolute;
   top: 0;
   left: 0;
   bottom: 0;
   right: 0;
   z-index: -1;
   overflow: hidden;
}

.appheader{
  background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ######### TICKER SLIDE ######### */

.ticker-container {
  background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
	width: 100%;
  overflow: hidden;
  margin: 0 auto;
}
.ticker-text {
	height: 150%;
  color: #fafafa;
  white-space:nowrap;
  display:inline-block;
  font-family: 'Montserrat', sans-serif;
  text-transform: uppercase;
  font-size: 24px;
}

.ticker-title{
  background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
	width: 100%;
  overflow: hidden;
  margin: 0 auto;
}

p.tickerheader{
  background: linear-gradient(to right, #19b1b2 0%, #2d8283 20%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}


/* ######### NAVBAR ######### */

nav {
  background-color: #292b2c;
}


/* ######### MAIN DIVS ######### */

