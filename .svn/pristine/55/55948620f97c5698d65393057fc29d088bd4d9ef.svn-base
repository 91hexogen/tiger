
/* BOOTSTRAP BOX-SIZING */
.selector-for-some-widget {
  box-sizing: content-box;
}

html {
  height: 100%;
  box-sizing: border-box;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

body {
  position: relative;
  margin: 0;
  padding-bottom: 6rem;
  min-height: 100%;
  background-color: grey;
}

h3.headtitle {
	background: linear-gradient(to right, #30CFD0 0%, #330867 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

h2.green {
  background: linear-gradient(to right, #30CFD0 0%, #EEE 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}

.main{
  background: linear-gradient(to bottom, #37474F 0%, #333 100%);
}

/* ######### TICKER SLIDE ######### */

#slider {
  margin: 1em auto;
  width: 100%;
  height: 130px;
  overflow: hidden;
}
#slider .images {
  position: relative;
  transition: left 0.5s;
  left: 0;
}
#slider .images img {
  position: absolute;
}

/* ######### NAVBAR ######### */

nav {
  background-color: #292b2c;
}


/* ######### MAIN DIVS ######### */

overflow: hidden;
}

.text-center {
text-align: center!important;
}


div {
display: block;
}

.img-fluid {
max-width: 100%;
height: auto;
border-radius: 21px 21px 0 0;
}

@media all and (max-width:30em){
 a.py-2{
  display:block;
  margin:0.4em auto;
 }
}



/* ######### FOOTER ######### */

.footer {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 1rem;
  text-align: center;
  color: #EEE;
}

strong{
  color: #f39200; /*Konsole Orange*/
  text-decoration: none;
}


/* ######### RESPONSIVE CSS ######### */


*, ::after, ::before {
box-sizing: border-box;
}
